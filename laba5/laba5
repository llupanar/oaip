//В двухмерном массиве определить сумму элементов,
//имеющих нечетные значения и стоящих на четных местах.

#include <stdio.h>
#include <locale.h>
#define ST 2
#define STR 4

int main() 
{
	int mass[ST][STR];
	int i, j, z, sum=0;
	setlocale(LC_ALL, "Russian"); //русификация

	for (i = 0; i < ST; i++) { // ввод элементов
		for (j = 0; j < STR; j++) {
			printf("введите элемент массива\n");
			scanf_s("%d", &mass[i][j]);
		}
	}
	for (i = 0; i < ST; i++) {
  for (j = 1; j < STR; j+=2) { // четная позиция числа начинается со второго элемента строки, т.е. с индекса "1", а не "0" в массиве
				z = mass[i][j] % 2; // находим остаток от деления для проверки на ч/нч
				if (z != 0)
					sum += mass[i][j]; //сумма 
		}
	}
		printf("%d", sum);
}
